<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/card_item">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/img_store"
                    android:src="@drawable/cloovy"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_productname"
                    android:text="Product name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_below="@id/img_store"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_desc"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_below="@id/txt_productname"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_qty"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_below="@id/txt_desc"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_qty"
                    android:text="Edit"
                    android:id="@+id/btn_edit"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/crimson"
                    android:layout_toRightOf="@id/btn_edit"
                    android:layout_below="@id/txt_qty"
                    android:layout_marginLeft="12dp"
                    android:text="Delete"
                    android:id="@+id/btn_delete"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_qty"
                    android:layout_toRightOf="@id/btn_delete"
                    android:id="@+id/btn_order"
                    android:layout_marginLeft="12dp"
                    android:text="Order"
                    android:backgroundTint="@color/green"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>